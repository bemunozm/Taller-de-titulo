# Example env for lpr manager and workers
# URL base del backend (usado por reconciliación y pasado al worker)
WORKER_BACKEND_URL=http://localhost:3000
# Token Bearer para que el manager pueda consultar el backend (si el backend protege /cameras)
WORKER_BACKEND_TOKEN=
# Secreto compartido para que el backend notifique al manager
WORKER_MANAGER_SECRET=change-me-to-a-secure-random-value
# Puerto donde correrá el manager
WORKER_MANAGER_PORT=8000
# Si quieres que el worker reciba el backend url como argumento, deja BACKEND_URL en el sistema
# Opciones para workers (ejemplos)
LPR_DRY_RUN=true
LPR_SAVE_DETECTIONS_DIR=./detections
LPR_MIN_DET_CONF=0.45

